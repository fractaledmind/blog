<ul class="list-none !pl-0">
  {% for post in collection %}
    <li class="border-t border-dashed border-[var(--tw-prose-body)] py-16">
      {% render "post_note", post: post %}
      
      <h2 class="!text-2xl !mt-0">
        <a href="{{ post.relative_url }}">{{ post.data.title }}{% if post.data.subtitle %}: {{ post.data.subtitle }}{% endif %}</a>
      </h2>
      {{ post.summary }}
      
      <a href="{{ post.relative_url }}" class="no-underline">
        <span class="underline">Continue reading</span>
        &hellip;
      </a>
    </li>
  {% endfor %}
</ul>